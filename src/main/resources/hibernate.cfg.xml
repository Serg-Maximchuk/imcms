<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
    	<property name="hibernate.show_sql">@showHibernateSQL@</property>
    	<property name="hibernate.format_sql">@showHibernateSQL@</property>
    	<property name="hibernate.use_sql_comments">@showHibernateSQL@</property>
    	   	
        <mapping class="com.imcode.imcms.api.Meta"/>
        
        <mapping class="com.imcode.imcms.mapping.orm.TemplateNames"/> 
        <mapping class="com.imcode.imcms.mapping.orm.Include"/>
        <mapping class="com.imcode.imcms.mapping.orm.FileReference"/>
        <mapping class="com.imcode.imcms.mapping.orm.HtmlReference"/>
        <mapping class="com.imcode.imcms.mapping.orm.UrlReference"/>
            
        <mapping class="com.imcode.imcms.api.I18nMeta"/>
        <mapping class="com.imcode.imcms.api.I18nLanguage"/>
        <mapping class="com.imcode.imcms.api.Content"/>
        <mapping class="com.imcode.imcms.api.DocumentVersion"/>
        
        <mapping class="com.imcode.imcms.api.ContentLoop"/>
        
        <mapping class="imcode.server.document.textdocument.ImageDomainObject"/>
        <mapping class="imcode.server.document.textdocument.TextDomainObject"/>
        <mapping class="imcode.server.document.textdocument.MenuDomainObject"/>

    </session-factory>
    
</hibernate-configuration>