<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

  <!-- Unique -->
  <query name="ContentLoop.getByDocRefAndNo">
    <![CDATA[
    SELECT l FROM ContentLoop l WHERE l.docRef = :docRef AND l.no = :no
    ]]>
  </query>


  <!-- List -->
  <query name="ContentLoop.getByDocRef">
    <![CDATA[
    SELECT l FROM ContentLoop l WHERE l.docRef = :docRef
    ]]>
  </query>
    
</hibernate-mapping>