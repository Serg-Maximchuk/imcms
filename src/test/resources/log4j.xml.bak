<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true" reset="true" threshold="info">

    <!-- The errorlog (captures everything that doesn't go to one of the above. -->
    <appender name="ALL" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="ALL"/>

        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-5p %c - %m%n"/>
        </layout>
    </appender>

    <category name="org.apache" additivity="false">
        <priority value="error"/>
        <appender-ref ref="ALL"/>
    </category>

    <category name="log4j.logger.org.hibernate" additivity="false">
        <priority value="all"/>
        <appender-ref ref="ALL"/>
    </category>

    <category name="org.hibernate.SQL" additivity="false">
        <priority value="all"/>
        <appender-ref ref="ALL"/>
    </category>

    <category name="org.hibernate.type" additivity="false">
        <priority value="all"/>
        <appender-ref ref="ALL"/>
    </category>

    <category name="org.hibernate.transaction" additivity="false">
        <priority value="all"/>
        <appender-ref ref="ALL"/>
    </category>

    <!--
    org.hibernate.SQL        Log all SQL DML statements as they are executed
    org.hibernate.type  Log all JDBC parameters
    org.hibernate.tool.hbm2ddl  Log all SQL DDL statements as they are executed
    org.hibernate.pretty    Log the state of all entities (max 20 entities) associated with the session at flush time
    org.hibernate.cache     Log all second-level cache activity
    org.hibernate.transaction   Log transaction related activity
    org.hibernate.jdbc  Log all JDBC resource acquisition
    org.hibernate.hql.ast.AST   Log HQL and SQL ASTs during query parsing
    org.hibernate.secure    Log all JAAS authorization requests
    org.hibernate   Log everything (a lot of information, but very useful for troubleshooting)
    -->

    <root>
        <priority value="ALL"/>
        <appender-ref ref="ALL"/>
    </root>

</log4j:configuration>
