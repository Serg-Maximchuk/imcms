<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
    <servlet>
        <servlet-name>
            init
        </servlet-name>
        <servlet-class>
            MainInitServlet
        </servlet-class>
		<init-param>
       		<param-name>log4j-init-file</param-name>
       		<param-value>WEB-INF/conf/log4j.lcf</param-value>
     	</init-param>
		<load-on-startup>
            1
		</load-on-startup>
    </servlet>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
