    <table name="texts_history">
        <column name="meta_id" type="INTEGER" required="true" />
        <column name="name" type="INTEGER" required="true" />
        <column name="text" type="CLOB" required="true" />
        <column name="type" type="INTEGER" required="false" />
        <column name="modified_datetime" type="TIMESTAMP" required="true"/>
        <column name="user_id" type="INTEGER" required="true" />
        <column autoIncrement="true" name="counter" primaryKey="true" type="INTEGER" required="true" />
        <foreign-key foreignTable="meta">
            <reference foreign="meta_id" local="meta_id" />
        </foreign-key>
        <foreign-key foreignTable="users">
            <reference foreign="user_id" local="user_id" />
        </foreign-key>
    </table>
