	<table name="categories">
        <column autoIncrement="true" name="category_id" primaryKey="true" required="true" type="INTEGER" />
        <column name="category_type_id" required="true" type="INTEGER" primaryKey="false" autoIncrement="false" />
        <column name="name" required="true" size="50" type="VARCHAR" primaryKey="false" autoIncrement="false" />
        <column name="description" size="500" type="VARCHAR" primaryKey="false" required="false" autoIncrement="false" />
        <column default="" name="image" required="true" size="255" type="VARCHAR" primaryKey="false" autoIncrement="false" />
        <foreign-key foreignTable="category_types">
            <reference foreign="category_type_id" local="category_type_id" />
        </foreign-key>
    </table>
