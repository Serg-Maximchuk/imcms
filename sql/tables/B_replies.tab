	<table name="B_replies">
        <column autoIncrement="true" name="reply_id" primaryKey="true" required="true" type="INTEGER" />
        <column name="ip_adress" required="true" size="15" type="VARCHAR" />
        <column name="create_date" required="true" type="TIMESTAMP" />
        <column name="headline" required="true" size="255" type="VARCHAR" />
        <column name="text" required="true" type="CLOB" />
        <column name="parent_id" required="true" type="INTEGER" />
        <column name="user_id" required="true" type="INTEGER" />
        <column name="email" required="true" size="155" type="VARCHAR" />
        <foreign-key foreignTable="B_bill">
            <reference foreign="bill_id" local="parent_id" />
        </foreign-key>
    </table>
