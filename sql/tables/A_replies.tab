	<table name="A_replies">
        <column autoIncrement="true" name="reply_id" primaryKey="true" required="true" type="INTEGER" />
        <column name="user_id" type="INTEGER" required="false" />
        <column name="parent_id" type="INTEGER" required="false" />
        <column name="create_date" type="TIMESTAMP" required="false" />
        <column name="headline" size="255" type="VARCHAR" required="false" />
        <column name="text" type="CLOB" required="false" />
        <column default="0" name="reply_level" required="true" type="INTEGER" />
        <foreign-key foreignTable="A_conf_users">
            <reference foreign="user_id" local="user_id" />
        </foreign-key>
    </table>
