	<table name="poll_questions">
        <column autoIncrement="true" name="id" primaryKey="true" required="true" type="INTEGER" />
        <column name="poll_id" required="true" type="INTEGER" />
        <column name="question_number" required="true" type="INTEGER" />
        <column name="text_id" required="true" type="INTEGER" />
        <foreign-key foreignTable="polls">
            <reference foreign="id" local="poll_id" />
        </foreign-key>
        <unique>
            <unique-column name="poll_id"/>
            <unique-column name="question_number"/>
        </unique>
        <unique>
            <unique-column name="poll_id"/>
            <unique-column name="text_id"/>
        </unique>
    </table>
