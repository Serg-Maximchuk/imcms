<?xml version="1.0" encoding="UTF-8"?>
<!--
There are two ways to associate custom imCMS roles with a LDAP entries:
  1.An imCMS role can be mapped to any LDAP user's context attribute.
    An imCMS role specified in <role-to-attribute> will be assigned to an imCMS user at the login time if
    user's LDAP context contains attribute with matching name-value pair.

  2.An imCMS role can me mapped to any Active Directory group.
    An imCMS role specified in <role-to-ad-group> will be assigned to an imCMS user at the login time if
    LDAP service provider is Active Directory and the user is a (direct or indirect) member of a group
    with matching aAMAccountName.
-->
<server>
    <ldap>
        <mapped-roles>
            <role-to-attribute role="LDAP-EMERGENCY" attribute-name="phone" attribute-value="112"/>
            <role-to-attribute role="LDAP-MANAGER" attribute-name="title" attribute-value="manager"/>
            <role-to-attribute role="LDAP-SPECIAL" attribute-name="primaryGroupID" attribute-value="513"/>

            <!--
                If role name equals to group name (aAMAccountName) then 'group' attribute can be omitted.
            -->
            <role-to-ad-group role="imGrpGlobalsec" group="imGrpGlobalSec"/>
            <role-to-ad-group role="imGrpLocalsec" group="imGrpLocalSec"/>
            <role-to-ad-group role="imGrpUniSec"/>
            <role-to-ad-group role="imGrpLocDist"/>
            <role-to-ad-group role="imGrpGloDist"/>
            <role-to-ad-group role="imGrpUniDist"/>
        </mapped-roles>
    </ldap>
</server>