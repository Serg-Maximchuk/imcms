<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">


<!-- Start log4j configuration -->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="true">

    <!-- Renderer for DocumentRequest -->
    <renderer
        renderingClass="imcode.util.log.FakeRequestRenderer"
        renderedClass="imcode.server.DocumentRequest"/>

    <!-- The accesslog (logs usermovements) -->
    <appender name="ACCESS" class="imcode.util.log.DailyRollingFileAppender">
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%d{ISO8601} %m%n"/>
        </layout>
    </appender>

    <appender name="WEBAPPACCESS" class="imcode.util.log.WebAppFileAppender">
        <param name="File" value="WEB-INF/logs/access.log"/>
        <appender-ref ref="ACCESS"/>
    </appender>

    <!-- The mainlog (captures edits and changes) -->
    <appender name="MAIN" class="org.apache.log4j.FileAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-5p %m%n"/>
        </layout>
    </appender>

    <appender name="WEBAPPMAIN" class="imcode.util.log.WebAppFileAppender">
        <param name="File" value="WEB-INF/logs/main.log"/>
        <appender-ref ref="MAIN"/>
    </appender>

    <!-- The errorlog (captures everything that doesn't go to one of the above. -->
    <appender name="ERROR" class="org.apache.log4j.FileAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-5p %c %x - %m%n"/>
        </layout>
    </appender>

    <appender name="WEBAPPERROR" class="imcode.util.log.WebAppFileAppender">
        <param name="File" value="WEB-INF/logs/error.log"/>
        <appender-ref ref="ERROR"/>
    </appender>

    <!-- Uncomment if you have a log4j server listening to logevents -->
    <appender name="SOCKETERROR" class="org.apache.log4j.net.SocketAppender">
        <param name="Port" value="4445"/>
        <param name="RemoteHost" value="localhost"/>
        <param name="LocationInfo" value="true"/>
        <param name="ReconnectionDelay" value="5000"/>
    </appender>

    <appender name="NULL" class="org.apache.log4j.varia.NullAppender"/>

    <!-- Write HttpUnit code for requests to logfile
        <appender name="HTTPUNIT" class="org.apache.log4j.FileAppender">
            <layout class="org.apache.log4j.PatternLayout">
                <param name="ConversionPattern" value="%d{ISO8601} %-5p %c - %m%n"/>
            </layout>
        </appender>

        <appender name="WEBAPPHTTPUNIT" class="imcode.util.log.WebAppFileAppender">
            <param name="File" value="WEB-INF/logs/httpunit.log"/>
            <appender-ref ref="HTTPUNIT"/>
        </appender>

        <category name="httpunit" additivity="false">
        <priority value="debug"/>
        <appender-ref ref="WEBAPPHTTPUNIT"/>
        </category>
    -->

    <!-- Set up accesslog with priority 'debug' -->
    <category name="accesslog" additivity="false">
        <priority value="debug"/>
        <appender-ref ref="WEBAPPACCESS"/>
    </category>

    <!-- Set up mainlog with priority 'debug' -->
    <category name="mainlog" additivity="false">
        <priority value="debug"/>
        <appender-ref ref="WEBAPPMAIN"/>
    </category>

    <category name="velocity" additivity="false">
        <priority value="warn"/>
        <appender-ref ref="WEBAPPERROR"/>
    </category>

    <category name="org.apache" additivity="false">
        <appender-ref ref="NULL"/>
    </category>

    <!-- Set up the errorlog with priority 'debug' -->
    <root>
        <priority value="debug"/>
        <appender-ref ref="WEBAPPERROR"/>
        <appender-ref ref="SOCKETERROR"/>
    </root>

</log4j:configuration>
